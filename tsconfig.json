{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2023",
    "module": "esnext",

    "allowJs": true,
    "checkJs": true,

    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "rootDir": "./",
    "outDir": "./dist/",
    "baseUrl": "./src/",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Start with moderate strictness, we can increase later
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false,

    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true
  }
}
