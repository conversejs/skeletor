{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2023", "dom"],

    // Type checking
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false,

    // Modules
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // Emit - Only declaration files, no JS files
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",

    // Other
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src/"
  }
}
